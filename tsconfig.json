{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./*"],
      "src/classes/*": ["./class/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_document.js", "next.config.js"],
  "exclude": ["node_modules"]
}
